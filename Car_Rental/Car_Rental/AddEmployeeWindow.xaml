<Window x:Class="Car_Rental.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj pracownika" Height="200" Width="350" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Dodaj nowego pracownika" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Anuluj" Width="80" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Dodaj" Width="80" Click="Add_Click"/>
        </StackPanel>
    </StackPanel>
</Window>